<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
       >



        <Button
            android:id="@+id/buttonLoad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.8"
            android:background="#57B0D8"
            android:onClick="onclickLoad"
            android:text="LOAD"
            android:textSize="11sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.8"
            android:background="#57B0D8"
            android:onClick="onclickSave"
            android:text="SAVE"
            android:textSize="11sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/buttonShow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:background="#57B0D8"
            android:onClick="onclickShow"
            android:text="SHOW SETTINGS"
            android:textSize="11sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/buttonScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.8"
            android:background="#57B0D8"
            android:onClick="onclickScore"
            android:text="SCORE"
            android:textSize="11sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
>


        <EditText
            android:id="@+id/nextguess"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="text"
            android:hint ="next guess" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#57B0D8"
            android:onClick="onclickSubmit"
            android:text="SUBMIT"
            android:textSize="11sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.95"
    />

    <LinearLayout
        android:id="@+id/TableRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
 >

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#57B0D8"
            android:onClick="onclickNewGame"
            android:text="START NEW GAME"
            android:textSize="11sp"
            app:backgroundTint="@null" />
    </LinearLayout>

</LinearLayout>